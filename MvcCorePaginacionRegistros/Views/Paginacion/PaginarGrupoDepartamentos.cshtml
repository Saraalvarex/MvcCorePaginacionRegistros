@model IEnumerable<MvcCorePaginacionRegistros.Models.Departamento>
@{
    int numeroregistros = (int)ViewBag.REGISTROS;
    int numeropagina = 1;
}
@{
    ViewData["Title"] = "PaginarGrupoDepartamentos";
}

<h1 style="color:deeppink">Paginar Grupo Departamento</h1>
<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <= numeroregistros; i += 2)
    {
        <li class="list-group-item list-group-item-danger">
            <a asp-action="PaginarGrupoDepartamentos"
           asp-controller="Paginacion"
           asp-route-posicion="@i">
                @numeropagina
            </a>
        </li>
        numeropagina += 1;
    }
</ul>

<hr />
@Html.Raw(ViewBag.LINKS)
