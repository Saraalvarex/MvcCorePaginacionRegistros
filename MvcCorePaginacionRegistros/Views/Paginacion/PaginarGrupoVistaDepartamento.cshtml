@model IEnumerable<MvcCorePaginacionRegistros.Models.VistaDepartamento>
@{
    int numeroregistros = (int)ViewBag.REGISTROS;
    int numeropagina = 1;
}
@{
    ViewData["Title"] = "PaginarGrupoVistaDepartamento";
}

<h1>Paginar Grupo Vista Departamento</h1>
<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <=numeroregistros; i+=2)
    {
        <li class="list-group-item list-group-item-danger">
            <a asp-action="PaginarGrupoVistaDepartamento"
            asp-controller="Paginacion"
            asp-route-posicion="@i">
                @numeropagina
            </a>
        </li>
        numeropagina += 1;
    }
</ul>

<table class="table table-primary">
    <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>LOCALIDAD</th>
            <th>POSICION</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posicion)
            </td>
